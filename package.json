{
  "name": "polykode-client",
  "version": "0.0.0",
  "description": "Polykode client",
  "repository": "__",
  "bugs": {
    "url": "https://github.com/polykode/web-client/issues"
  },
  "scripts": {
    "build": "yarn bs:build && yarn bundle",
    "start": "yarn serve",
    "serve": "node scripts/serve.js",
    "bs:build": "bsb -clean-world -make-world",
    "bs:clean": "bsb -clean-world",
    "bs:watch": "bsb -make-world -w",
    "format": "bsrefmt src/**/*.re --in-place",
    "bundle": "node scripts/build.js",
    "test": "jest",
    "test:watch": "concurrently 'yarn start' 'yarn test --watch' -c 'magenta,blue' -n 'build,test'",
    "tw:gen": "node ./scripts/generate-tailwind-classes.js",
    "prepare": "npm run tw:gen || true"
  },
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "bs-platform": "^9.0.1",
    "chokidar": "^3.5.1",
    "concurrently": "^6.0.0",
    "esbuild": "^0.9.3",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "live-server": "^1.2.1",
    "mustache": "^4.1.0",
    "postcss": "^8.2.8",
    "postcss-import": "^14.0.0",
    "reason-test-framework": "^0.3.2",
    "tmp": "^0.2.1"
  },
  "dependencies": {
    "bs-bastet": "^2.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reason-react": "^0.9.1",
    "relude": "^0.65.0",
    "tailwindcss": "^2.0.3"
  }
}
